{
	"compilerOptions": {
		"noImplicitAny": false
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-explicit-any"
			]
		}
	},
	"fmt": {
		"files": {
			"exclude": [
				"velociraptor.yaml",
				"src/deps.ts"
			]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 80,
			"indentWidth": 4,
			"singleQuote": false,
			"proseWrap": "preserve"
		}
	}
}
